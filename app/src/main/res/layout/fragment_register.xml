<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bichan.shop.fragments.login.RegisterFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <EditText
                    android:id="@+id/edtName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:ems="10"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:hint="Họ và tên" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <EditText
                    android:id="@+id/edtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:ems="10"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:hint="Địa chỉ email" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                android:layout_marginTop="8dp">
                <EditText
                    android:id="@+id/edtPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:ems="10"
                    android:singleLine="true"
                    android:imeOptions="actionNext"
                    android:inputType="textPassword"
                    android:hint="Mật khẩu" />
            </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_marginLeft="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mật khẩu phải gồm ít nhất 6 ký tự."/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                android:layout_marginTop="8dp">
                <EditText
                    android:id="@+id/edtRePass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:ems="10"
                    android:singleLine="true"
                    android:imeOptions="actionGo"
                    android:inputType="textPassword"
                    android:hint="Nhập lại mật khẩu" />
            </android.support.design.widget.TextInputLayout>

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mrl_rippleColor="@color/colorMaterialRipple"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" >
                <Button
                    android:id="@+id/btnRegister"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:padding="15dp"
                    android:background="@drawable/button_buy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="Đăng ký"/>
            </com.balysv.materialripple.MaterialRippleLayout>

            <TextView
                android:layout_marginTop="32dp"
                android:layout_gravity="center"
                android:text="Hoặc đăng ký bằng"
                android:textColor="@color/md_black_1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btnFacebook"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:padding="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_login_facebook"
                    android:tag="facebook_login_button"
                    android:drawableTint="@color/md_blue_700"
                    android:drawableLeft="@drawable/ic_facebook_white_36dp"
                    android:drawableStart="@drawable/ic_facebook_white_36dp"
                    android:textColor="@color/md_blue_700"
                    android:text="Facebook" />

                <Button
                    android:id="@+id/btnGoogle"
                    android:padding="8dp"
                    android:layout_width="0dp"
                    android:layout_margin="4dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:tag="google_login_button"
                    android:drawableTint="@color/md_red_700"
                    android:background="@drawable/button_login_google"
                    android:drawableLeft="@drawable/ic_google_plus_white_36dp"
                    android:drawableStart="@drawable/ic_google_plus_white_36dp"
                    android:textColor="@color/md_red_700"
                    android:text="Google" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>

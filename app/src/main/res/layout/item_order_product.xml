<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="4dp"
    android:paddingBottom="8dp">
    <com.balysv.materialripple.MaterialRippleLayout
        android:id="@+id/ripple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mrl_rippleColor="@color/colorMaterialRipple"
        app:mrl_rippleHover="true"
        app:mrl_rippleOverlay="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/md_black_1000"
                android:id="@+id/tvName"
                android:text="Máy Ảnh Ricoh GR II - Hàng Chính Hãng"/>
            <org.fabiomsr.moneytextview.MoneyTextView
                android:layout_marginLeft="8dp"
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:baseTextSize="12dp"
                app:symbol="₫"
                app:baseTextColor="@color/md_black_1000"
                app:includeDecimalSeparator="true"
                app:decimalDigitsTextSize="0dp"
                app:amount="100000" />
            <LinearLayout
                android:layout_marginLeft="8dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số lượng: "/>
                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"/>
            </LinearLayout>
            <org.fabiomsr.moneytextview.MoneyTextView
                android:layout_marginLeft="8dp"
                android:id="@+id/tvTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:baseTextSize="12dp"
                app:symbol="₫"
                app:baseTextColor="@color/md_red_700"
                app:includeDecimalSeparator="true"
                app:decimalDigitsTextSize="0dp"
                app:amount="100000" />
        </LinearLayout>
   </com.balysv.materialripple.MaterialRippleLayout>
</LinearLayout>
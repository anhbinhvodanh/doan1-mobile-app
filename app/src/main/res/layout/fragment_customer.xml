<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bichan.shop.fragments.CustomerFragment">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_backgound_border">
                <LinearLayout
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <cn.carbs.android.avatarimageview.library.AvatarImageView
                        android:id="@+id/item_avatar"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:padding="5dp"
                        app:aiv_BoarderWidth="1dp"
                        app:aiv_ShowBoarder="true"
                        app:aiv_BoarderColor="@color/md_black_1000"
                        app:aiv_TextSizeRatio="0.4"/>
                    <TextView
                        android:id="@+id/tvName"
                        android:layout_marginLeft="4dp"
                        android:textColor="@color/md_black_1000"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pham Van cuong"/>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/layout_backgound_border">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_black_1000"
                    android:text="Địa chỉ email"/>
                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="cuong95nd@gmail.com"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="-1dp"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/layout_backgound_border">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_black_1000"
                    android:text="Số điện thoại"/>
                <TextView
                    android:id="@+id/tvTelephone"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="cuong95nd@gmail.com"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="-1dp"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/layout_backgound_border">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_black_1000"
                    android:text="Ngày đăng ký"/>
                <TextView
                    android:id="@+id/tvDateAdded"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="cuong95nd@gmail.com"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutSocial"
                android:layout_marginTop="8dp"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/layout_backgound_border">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/md_black_1000"
                    android:text="Liên kết tài khoản"/>
                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btnFacebook"
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_margin="4dp"
                        android:padding="8dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/md_blue_700"
                        android:tag="facebook_login_button"
                        android:drawableLeft="@drawable/ic_facebook_icon"
                        android:drawableStart="@drawable/ic_facebook_icon"
                        android:textColor="@color/md_white_1000"
                        android:text="Facebook" />

                    <Button
                        android:id="@+id/btnGoogle"
                        android:padding="8dp"
                        android:layout_width="0dp"
                        android:layout_margin="4dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:tag="google_login_button"
                        android:backgroundTint="@color/md_red_700"
                        android:drawableLeft="@drawable/ic_google_icon"
                        android:drawableStart="@drawable/ic_google_icon"
                        android:textColor="@color/md_white_1000"
                        android:text="Google" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:mrl_rippleColor="@color/colorMaterialRipple"
                    app:mrl_rippleHover="true"
                    app:mrl_rippleOverlay="true">
                    <Button
                        android:layout_margin="8dp"
                        android:id="@+id/btnLogin"
                        android:textColor="@color/colorAccent"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:background="@drawable/button_border"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Đăng ký / Đăng nhập"/>
                </com.balysv.materialripple.MaterialRippleLayout>
            </LinearLayout>


            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:mrl_rippleColor="@color/colorMaterialRipple"
                app:mrl_rippleHover="true"
                app:mrl_rippleOverlay="true">
                <Button
                    android:id="@+id/btnLogout"
                    android:textColor="@color/md_white_1000"
                    android:textStyle="bold"
                    android:background="@drawable/button_buy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đăng xuất"/>
            </com.balysv.materialripple.MaterialRippleLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</FrameLayout>

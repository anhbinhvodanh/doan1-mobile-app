<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.bichan.shop.custom.views.MyProgressView
        app:animation_time="100"
        app:fading_circle_color="@color/colorAccent"
        app:stationary_circle_color="@color/colorAccent"
        app:orbiting_circle_color="@color/colorAccent"
        app:orbiting_circle_radius="5dp"
        app:stationary_circle_radius="10dp"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
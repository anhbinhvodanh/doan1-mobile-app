<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bichan.shop.fragments.home.CartFragment">
    <com.kennyc.view.MultiStateView
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:id="@+id/layoutStateLogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:msv_errorView="@layout/state_error_login"
        app:msv_emptyView="@layout/state_empty"
        app:msv_loadingView="@layout/state_loading"
        app:msv_viewState="content">
            <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="48dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvProducts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </android.support.v7.widget.RecyclerView>
                <Button
                    android:layout_marginTop="16dp"
                    android:id="@+id/btnClearCart"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="Dọn dẹp giỏ hàng"
                    android:textAllCaps="false"
                    android:background="@drawable/selector_light_theme"
                    android:textColor="@color/colorAccent" />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_alignParentBottom="true"
                android:padding="8dp"
                android:background="@drawable/layout_backgound_border"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">
                    <TextView
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Thành tiền"/>
                    <org.fabiomsr.moneytextview.MoneyTextView
                        android:id="@+id/tvTotalDiscount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:baseTextSize="17dp"
                        app:symbol="₫"
                        app:baseTextColor="@color/md_red_700"
                        app:includeDecimalSeparator="true"
                        app:decimalDigitsTextSize="0dp"
                        app:amount="0" />
                </LinearLayout>
                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:mrl_rippleColor="@color/colorMaterialRipple"
                    app:mrl_rippleHover="true"
                    app:mrl_rippleOverlay="true"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" >
                    <Button
                        android:id="@+id/btnCheckout"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        android:padding="15dp"
                        android:background="@drawable/button_buy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tiến hành thanh toán"/>
                </com.balysv.materialripple.MaterialRippleLayout>
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
    </com.kennyc.view.MultiStateView>

</FrameLayout>
